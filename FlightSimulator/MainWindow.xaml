<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="870">
    <Grid>
        <TextBlock Text="Flight Simulator" Margin="3" FontSize="30" FontStyle="Normal" 
                   HorizontalAlignment="Center" Foreground="DarkGray"/>
        
        <local:FlightBoard Width="400" Height="400" Margin="0,50,0,0" HorizontalAlignment="Left" Loaded="FlightBoard_Loaded_1"/>
        <local:ManualController Width="450" Height="500" Margin="0,37,10.333,-16.333" HorizontalAlignment="Right" Loaded="ManualController_Loaded"/>
        <Button x:Name="Connect" Content="Connect" HorizontalAlignment="Left" Height="20" Width="50" Margin="10,20,0,420.667" FontSize="10" Background="LightGray"/>
        <Button x:Name="Settings" Content="Settings" HorizontalAlignment="Left" Height="20" Width="50" Margin="68,20,0,420.667" FontSize="10" Background="LightGray"/>
    </Grid>
    
</Window>
