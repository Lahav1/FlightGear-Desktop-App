<UserControl x:Class="FlightSimulator.Views.TextualController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="450">
    <Grid>
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" TextChanged="TextBox_TextChanged" HorizontalAlignment="Center" Width="440" Height="450" VerticalAlignment="Top" Margin="0,5,0,0"/>

        <Button x:Name="OK" Height="30" Width="80" Content="OK" Margin="120,10,0,8" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14">
        </Button>
        <Button x:Name="Clear" Height="30" Width="80" Content="Clear" Margin="30,0,120,8" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="14"/>


    </Grid>
</UserControl>
